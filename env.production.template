# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Server Configuration
PORT=3000
BETTER_AUTH_URL=https://your-domain.com

# Database Configuration
POSTGRES_USER=plandera
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=plandera_db
DATABASE_URL=postgresql://plandera:your-secure-password-here@db:5432/plandera_db

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-at-least-32-characters-long

# Better Auth - GitHub OAuth (Optional)
BETTER_AUTH_GITHUB_CLIENT_ID=your-github-client-id
BETTER_AUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Stripe Price IDs
STRIPE_PRICE_PERSONAL_MANAGED_MONTHLY=price_xxx
STRIPE_PRICE_PERSONAL_MANAGED_YEARLY=price_xxx
STRIPE_PRICE_BUSINESS_MANAGED=price_xxx
STRIPE_PRICE_BUSINESS_SELFHOSTED=price_xxx

# Application URLs
NEXT_PUBLIC_PLANERA_URL=https://app.your-domain.com

